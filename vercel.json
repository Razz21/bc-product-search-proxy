{
  "build": {
    "env": {
      "NODEJS_AWS_HANDLER_NAME": "handler"
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    },
    {
      "src": "api/*.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/api", "destination": "api/api.ts" },
    { "source": "/api/products", "destination": "api/products.ts" },
    { "source": "/api/product-search", "destination": "api/product-search.ts" }
  ]
}
