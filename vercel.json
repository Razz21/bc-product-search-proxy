{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "src/vercel/lambda/*.js",
      "use": "@vercel/node",
      "config": { "includeFiles": "dist/**" }
    }
  ],
  "rewrites": [
    { "source": "/api", "destination": "src/vercel/lambda/api.js" },
    { "source": "/api/products", "destination": "src/vercel/lambda/products.js" },
    { "source": "/api/product-search", "destination": "src/vercel/lambda/product-search.js" }
  ]
}
